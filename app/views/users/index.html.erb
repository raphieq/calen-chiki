<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Income</th>
      <th>Dob</th>
      <th>About</th>
      <th>Img url</th>
      <th>Pass</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.income %></td>
        <td><%= user.dob %></td>
        <td><%= user.about %></td>
        <td><%= user.img_url %></td>
        <td><%= user.password_digest %></td>
        <td><%= link_to 'Show', user %></td>
        <% if current_user && current_user.admin? %> 
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

